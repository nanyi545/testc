<?xml version="1.0" encoding="utf-8"?>
<com.ww.performancechore.recy_scroll.VG2
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_item_holder"
    android:focusable="true">

    <ImageView
        android:id="@+id/focus_bg"
        android:visibility="invisible"
        android:src="@drawable/video_item_focus_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintRight_toRightOf="@+id/anchor_left_30"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="104dp"
        />

    <ImageView
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/video_item_focus_sub_bg"
        android:visibility="invisible"
        android:id="@+id/focus_right_sub_bg"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/anchor_left_30"
        android:layout_height="96dp"
        app:layout_constraintLeft_toLeftOf="@id/focus_bg"
        android:layout_marginLeft="4dp"
        />

    <ImageView
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"
        android:id="@+id/video_img"
        android:layout_marginLeft="16dp"
        android:layout_width="96dp"
        android:layout_height="96dp"/>

    <TextView
        android:textSize="18dp"
        android:maxLines="2"
        android:singleLine="false"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/video_img"
        app:layout_constraintLeft_toRightOf="@id/video_img"
        android:id="@+id/title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/watching_count"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


<!--    android:src="@drawable/shortvideo_playing_anim"-->
    <ImageView
        android:src="#600"
        android:visibility="invisible"
        android:id="@+id/playing_icon"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/video_img"
        app:layout_constraintLeft_toRightOf="@id/video_img"
        android:layout_width="17dp"
        android:layout_height="17dp"/>

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/title"
        android:layout_marginLeft="30dp"
        android:id="@+id/anchor_left_30"
        android:layout_width="1px"
        android:layout_height="1px"
        />


</com.ww.performancechore.recy_scroll.VG2>